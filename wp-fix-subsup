no lib '.';  # CVE-2016-1238

use v5.10;
use strict;
use warnings;
use utf8;
use open ':std' => ':locale';

use English qw(-no_match_vars);
use Unicode::Normalize qw(NFKC);

my $sup = '⁺⁻⁰¹²³⁴⁵⁶⁷⁸⁹';
my $sub = '₊₋₀₁₂₃₄₅₆₇₈₉';
do {
    local $RS = undef;
    $_ = <STDIN>;
};
s(([$sup]+))('{{sup|' . NFKC($1) . '}}')ge;
s(([$sub]+))('{{sub|' . NFKC($1) . '}}')ge;
print;

